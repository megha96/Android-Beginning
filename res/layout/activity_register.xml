<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4C73D3"
    tools:context="com.example.android.meghaapp.register">


    <TextView
        android:text="Register"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#FCFDFA"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/editText"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#FCFDFA"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/editText2"
        android:id="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#FCFDFA"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignEnd="@+id/editText4"
        android:id="@+id/editText5" />


    <TextView
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Date of Birth:"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText6"
        android:background="#FCFDFA"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginStart="14dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Male"
        android:id="@+id/radioButton"
        android:background="#FCFDFA"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/editText6" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Female"
        android:background="#FCFDFA"
        android:id="@+id/radioButton2"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:textSize="10sp"
        android:layout_weight="0.13"
        android:layout_above="@+id/editText6"
        android:layout_alignEnd="@+id/radioButton"
        android:layout_marginBottom="11dp"
        android:layout_alignStart="@+id/editText6" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/radioButton2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="#FCFDFA"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp" />

    <TextView
        android:text="Email      :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>
